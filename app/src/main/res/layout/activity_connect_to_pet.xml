<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConnectToPet"
    android:background="@drawable/dog2"
    >

    <Button
    android:id="@+id/aboutButton"
    android:background="@drawable/border"
    android:textColor="@color/white"
    android:text="@string/about"
    android:typeface="monospace"
    android:textSize="25dp"

    android:layout_height="40dp"
    android:layout_width="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/exitButton"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:text="@string/exit"
        android:typeface="monospace"
        android:textSize="25dp"

        android:layout_height="40dp"
        android:layout_width="110dp"
        android:layout_below="@+id/aboutButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Insert MAC device collar address: "
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_above="@+id/forwardbtn"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/forwardbtn"
        android:src="@drawable/forward"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
